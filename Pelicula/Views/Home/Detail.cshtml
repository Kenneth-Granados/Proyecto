

@model PeliculaRepository;
@{
    Layout = "_PeliculaLayout";
    ViewData["Title"] = "Datail";
}

@*<div class="text-white container">*@
<div class="container">
    <br />
    <h3>@Model.Titulo</h3>
    <hr />
    
    <br />
    <div class="detailbox row">
        <div class="col-md-3 col-sm-0">
            <img src="@Model.LinkImagen" width="260px" height="300px" title=@Model.Titulo />
        </div>

        <div class="col-md-9 col-sm-10">
            
            <div class="row pr-3">
                <div class="col-md-7">
                    <h4>@Model.Titulo</h4>
                    <p class="lead Parrafo">@Model.Descripcion</p>
                </div>
                <div class="col-md-5">
                    <h6></h6><br />

                    <h6><span class="text-danger">Director</span> : @Model.Director</h6>
                    <h6><span class="text-danger">Actors</span> : @Model.Actores</h6>
                    <h6><span class="text-danger">Director</span> : @Model.Director</h6>
                    <h6><span class="text-danger">Runtime</span> : @Model.Duracion</h6>
                
                </div>
            </div>
        </div>
    </div>
    <br />
    <div>
        <iframe width="100%" height="500" src="@Model.LinkPelicula" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>

    <br />
    <div>
        <div class="form-floating">
          <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
          <label for="floatingTextarea2">Comments</label>
        </div>
    </div>

</div>
