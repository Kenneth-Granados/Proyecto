
@model List<Pelicula.Models.ComentarioDetail>

@if(Model.Count > 0)
{
    <h2 class="text-center">
        <strong class="text-success">Lista de comentarios</strong>
    </h2>  
    <div class="container">
        <div class="row bootstrap snippets bootdeys">
            <div class="col-md-12 col-sm-12">
                <div class="comment-wrapper">
                    <ul class="media-list">
                        @foreach (var item in Model)
                        {
                            <li class="media">
                                <div class="media-body">
                                    <span class="text-muted pull-right">
                                        <small class="text-muted">@item.Fecha</small>
                                    </span>
                                    <strong class="text-success">@item.UserName</strong>
                                    <p>@item.Comentario</p>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
}else
{
    <h2 class="text-center">Sé el primero el primero en comentar</h2>   
}


