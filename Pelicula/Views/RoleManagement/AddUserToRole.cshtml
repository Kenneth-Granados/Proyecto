@model UserRole

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "AddUserToRole";
}

<h3 class="text-center">Add User To Role</h3>
<hr />

@*@await Html.PartialAsync("_TopMenuPartial")*@

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <form asp-action="AddUserToRole" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Select UserName</label>
                    <select asp-for="UserId" asp-items="@ViewBag.Users" class="form-control">
                        <option selected disabled>--Select User--</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Select Role Name</label>
                    <select asp-for="RoleName" asp-items="@ViewBag.Roles" class="form-control">
                        <option selected disabled>--Select Role</option>
                    </select>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                <input type="submit" class="btn btn-outline-primary btn-block" value="Assign" />
                <a asp-action="Index" class="btn btn-outline-danger btn-block">Cancel</a>
            </form>
        </div>
    </div>
</div>
